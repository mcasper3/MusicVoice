<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval" >

            <solid android:color="@color/colorAccent" />
            <size
                android:height="100dp"
                android:width="100dp" />
        </shape>
    </item>
    <item
        android:top="15dp"
        android:bottom="15dp"
        android:left="15dp"
        android:right="15dp">
        <bitmap
            android:src="@drawable/ic_default_profile" >
        </bitmap>
    </item>
</layer-list>