<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/onboarding_fragment_parent"
    tools:context="me.mikecasper.musicvoice.onboarding.OnboardingActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_heightPercent="35%"
        app:layout_marginTopPercent="10%"
        app:layout_marginBottomPercent="5%"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_phone"
        android:id="@+id/onboarding_image" />

    <TextView
        android:id="@+id/info_text"
        android:layout_below="@+id/onboarding_image"
        android:text="@string/select_view_layout"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        app:layout_widthPercent="75%"
        app:layout_marginBottomPercent="5%"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_text"
        app:layout_marginLeftPercent="20%"
        android:clickable="true"
        android:padding="4dp"
        android:text="@string/back"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/onboarding_option_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        app:layout_marginRightPercent="20%"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/info_text"
        android:clickable="true"
        android:padding="4dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/onboarding_option_text"/>

</android.support.percent.PercentRelativeLayout>
